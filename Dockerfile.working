FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Install dependencies in a specific order to avoid conflicts
# Core web framework
RUN pip install --no-cache-dir \
    fastapi==0.115.5 \
    uvicorn[standard]==0.32.0 \
    pydantic==2.9.2 \
    pydantic-settings==2.6.1

# LangChain ecosystem (install without version constraints to let pip resolve)
RUN pip install --no-cache-dir \
    langchain-core \
    langchain-openai \
    langchain-community \
    langchain \
    langgraph

# OpenAI and other AI libraries
RUN pip install --no-cache-dir \
    openai \
    qdrant-client

# Utilities
RUN pip install --no-cache-dir \
    python-dotenv \
    loguru \
    httpx \
    tenacity \
    redis \
    slowapi \
    python-multipart

# Data processing
RUN pip install --no-cache-dir \
    numpy \
    pandas \
    pypdf \
    duckduckgo-search \
    rank-bm25

# Observability
RUN pip install --no-cache-dir \
    opentelemetry-sdk \
    opentelemetry-instrumentation-fastapi \
    opentelemetry-exporter-otlp

# Optional packages (install without strict versions)
RUN pip install --no-cache-dir \
    pillow \
    openpyxl \
    gunicorn \
    pytest \
    pytest-asyncio || true

# Copy application code
COPY app ./app
COPY __init__.py ./__init__.py

# Create data directory with proper permissions
RUN mkdir -p /data/workspace && chmod -R 777 /data

# Create non-root user
RUN addgroup --system appuser && \
    adduser --system --ingroup appuser appuser && \
    chown -R appuser:appuser /app

USER appuser

# Expose port
EXPOSE 8000

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/api/v1/health || exit 1

# Run the application
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
