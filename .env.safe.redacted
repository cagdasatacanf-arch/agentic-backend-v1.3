# ============================================================================
# SAFE ENVIRONMENT CONFIGURATION
# ============================================================================
# This file is for sharing configuration with Antigravity AI assistant
# Replace actual API keys with placeholder values like "sk-REDACTED"
# ============================================================================

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=local

# ============================================================================
# API CONFIGURATION
# ============================================================================
INTERNAL_API_KEY=your-internal-key-here

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=REDACTED
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# QDRANT VECTOR DATABASE
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents
QDRANT_API_KEY=REDACTED

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL_SECONDS=604800

# ============================================================================
# LANGGRAPH CONFIGURATION
# ============================================================================
ENABLE_LANGGRAPH_PERSISTENCE=true
MAX_AGENT_ITERATIONS=10

# ============================================================================
# LANGSMITH OBSERVABILITY (OPTIONAL)
# ============================================================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=REDACTED
LANGCHAIN_PROJECT=agentic-backend

# ============================================================================
# RAG CONFIGURATION
# ============================================================================
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# BACKGROUND JOBS
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# OPENTELEMETRY / JAEGER
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317

# ============================================================================
# FINANCIAL DATA APIS
# ============================================================================

# Finnhub - Stock Market Data
# Get your key from: https://finnhub.io/
FINNHUB_API_KEY=your-finnhub-key-here

# Perplexity AI - Advanced Research
# Get your key from: https://www.perplexity.ai/
PERPLEXITY_API_KEY=REDACTED

# Google AI Studio (Gemini)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=REDACTED
GOOGLE_AI_MODEL=gemini-pro

# Alpha Vantage - Financial Data
# Get your key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alphavantage-key-here

# Anthropic (Claude)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=REDACTED
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Perigon - News API
# Get your key from: https://www.goperigon.com/
PERIGON_API_KEY=your-perigon-key-here

# Commodity Price API
# Get your key from: https://commodities-api.com/
COMMODITY_PRICE_API_KEY=your-commodity-key-here

# Twelve Data - Financial Data
# Get your key from: https://twelvedata.com/
TWELVE_DATA_API_KEY=your-twelvedata-key-here

# Marketstack - Stock Market Data
# Get your key from: https://marketstack.com/
MARKETSTACK_API_KEY=your-marketstack-key-here

# ============================================================================
# API CONFIGURATION NOTES
# ============================================================================
# When sharing this file:
# 1. Replace all "your-*-key-here" with "REDACTED"
# 2. Keep the first few characters of keys (e.g., "sk-REDACTED", "pplx-REDACTED")
# 3. This helps identify which services are configured without exposing secrets
# ============================================================================
